@model User

@{
    ViewData["Title"] = "Me";
}

<div class="container justify-content-center">
    <div class="row justify-content-center">
        <div class="col justify-content-center">
            <p class="h5">
                This is @Model.Name's page.
            </p>
            @Html.ActionLink("Make friends", "AddToFriendsRequest", "User", new {id = Model.Id})
            @if (Model.Chocolates != null)
            {
                <p>Here're his chocolates:</p>
                <table class="table">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Chocolates)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @Html.ActionLink("View", "ViewChocolate", "Chocolate", new {id = item.Id})
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>