@model User

@{
    ViewData["Title"] = "Register page";
}

<div class="container justify-content-center">
    <div class="row justify-content-center">
        <div class="col justify-content-center">
            <form class="border border-light p-5" method="post" action="/User/AddToFriends">
                <div class="text-center">
                    <p class="h4 mb-4">Do you really know this user?</p>
                    <p class="h6 mb-1">Prove it by naming more than a half of his wrapper collection!</p>
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control" name="id" value="@Model.Id">
                </div>
                <div class="form-group">
                    <label for="guesses">Guesses</label>
                    <input type="text" class="form-control" id="guesses" name="guesses" aria-describedby="guessesHelp" placeholder="Enter your guesses">
                    <small id="guessesHelp" class="form-text text-muted">Comma-delimited names of wrappers, e.g. "kek,lol,mem"</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>