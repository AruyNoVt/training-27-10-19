@{
    ViewData["Title"] = "Create wrapper";
}

<div class="container justify-content-center">
    <div class="row justify-content-center">
        <div class="col justify-content-center">
            <form class="border border-light p-5" method="post" action="/Wrapper/CreatePost">
                <div class="text-center">
                    <p class="h4 mb-4">Add wrappers to your collection!</p>
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter wrapper name">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>